<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logo_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/logo"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/logo_lay"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginLeft="@dimen/size_50dp"
                    android:layout_marginRight="@dimen/size_50dp"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/librebaskervilleregular"
                    android:hint="Username"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_10_dp"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/input_text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginLeft="@dimen/size_50dp"
                    android:layout_marginTop="@dimen/size_20_dp"
                    android:layout_marginRight="@dimen/size_50dp"
                    android:background="@drawable/text_input_bg"
                    android:fontFamily="@font/librebaskervilleregular"
                    android:hint="Password"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/size_10_dp"
                    android:textColor="@color/input_text_color"
                    android:textColorHint="@color/input_text_color"
                    android:textSize="@dimen/text_size_14"
                    app:layout_constraintTop_toBottomOf="@+id/user_name" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginLeft="@dimen/size_50dp"
                    android:layout_marginTop="@dimen/size_20_dp"
                    android:layout_marginRight="@dimen/size_50dp"
                    android:backgroundTint="@color/logo_color"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/librebaskervilleregular"
                    app:elevation="@dimen/size_10_dp"
                    style="@style/Widget.App.Button"
                    app:layout_constraintTop_toBottomOf="@+id/password" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:fontFamily="@font/librebaskervilleregular"
                    app:layout_constraintTop_toBottomOf="@+id/login"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/size_10_dp"
                    android:layout_marginLeft="@dimen/size_50dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textColor="@color/black"
                    android:fontFamily="@font/librebaskervilleregular"
                    app:layout_constraintTop_toBottomOf="@+id/login"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/size_10_dp"
                    android:layout_marginRight="@dimen/size_50dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>